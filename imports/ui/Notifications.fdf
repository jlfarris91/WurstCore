    HighlightType "FILETEXTURE",
    HighlightAlphaFile "UI\Widgets\BattleNet\bnet-button01-highlight-mouse.blp", 
    HighlightAlphaMode "ADD",
  }

  Frame "BACKDROP" "Backdrop" INHERITS "NotificationBackdropTemplate" {
    SetAllPoints,
  }

