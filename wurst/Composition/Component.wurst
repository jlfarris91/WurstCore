package Component
import IComponent
import IComposite
import Meta

// ============================================================================
public constant int typeId_Component = Meta.registerAbstractClass("Component.Component")..registerInterface(typeId_IComponent).getTypeId()
public abstract class Component implements IComponent
  private IComposite m_owner
  private bool m_enabled

  // --------------------------------------------------------------------------
  construct(IComposite owner)
    m_owner = owner

  // --------------------------------------------------------------------------
  ondestroy
    setEnabled(false)

  // --------------------------------------------------------------------------
  override function getOwner() returns IComposite
    return m_owner

  // --------------------------------------------------------------------------
  override function setEnabled(bool enabled)
    if (m_enabled != enabled)
      if (enabled)
        onEnabled()
      else
        onDisabled()
      m_enabled = enabled

  // --------------------------------------------------------------------------
  override function getEnabled() returns bool
    return m_enabled

  // --------------------------------------------------------------------------
  function enable()
    setEnabled(true)

  // --------------------------------------------------------------------------
  function disable()
    setEnabled(false)

  // --------------------------------------------------------------------------
  protected function onEnabled()
    skip

  // --------------------------------------------------------------------------
  protected function onDisabled()
    skip

  // --------------------------------------------------------------------------
  protected function removeThis()
    m_owner.removeComponent(this)