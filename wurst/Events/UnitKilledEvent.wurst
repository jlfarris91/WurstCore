package UnitKilledEvent
import Events
import RegisterEvents

public AnonymousEvent g_unitKilledEvent

// ============================================================================
function onUnitDeath()
  g_unitKilledEvent.invoke()

// ============================================================================
init
  g_unitKilledEvent = new AnonymousEvent()
  registerPlayerUnitEvent(EVENT_PLAYER_UNIT_DEATH, function onUnitDeath)