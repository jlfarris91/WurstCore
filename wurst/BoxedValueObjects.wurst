package BoxedValueObjects
import Meta

// ============================================================================
public class String

  /////////////////////////////////////////////////////////////////////////////
  protected static function registerMetadata()
    Meta.registerClass(String.typeId)
  /////////////////////////////////////////////////////////////////////////////

  private string m_value
  
  // --------------------------------------------------------------------------
  construct()
    m_value = ""
  
  // --------------------------------------------------------------------------
  construct(string value)
    m_value = value

  // --------------------------------------------------------------------------
  function getValue() returns string
    return m_value

  // --------------------------------------------------------------------------
  function setValue(string value)
    m_value = value

