class ForEachWhileTask<T> extends Task
  private int m_iterations
  private real m_time
  private Func1<Task, LinkedList<T>> m_listGetter
  private Action2<Task, T> m_action
  private LLIterator<T> m_iterator
  private CallbackSingle m_executeOnceCallback

  // --------------------------------------------------------------------------
  construct(TaskDefinition definition, Task parent, object userData, CancellationToken ct,
            real time, int iterations, Func1<Task, LinkedList<T>> listGetter, Action2<Task, T> action)
    super(definition, parent, userData, ct)
    m_listGetter = listGetter.acquire()
    m_time = time
    m_iterations = iterations
    m_action = action.acquire()
    m_executeOnceCallback = null

  // --------------------------------------------------------------------------
  ondestroy
    m_listGetter.release()
    m_action.release()

    if (m_iterator != null)
      m_iterator.close()

    if (m_executeOnceCallback != null)
      destroy m_executeOnceCallback
      m_executeOnceCallback = null

  // --------------------------------------------------------------------------
  override protected function run()
    super.run()

    let list = m_listGetter.call(this)

    if (list == null)
      fail("List cannot be null")
      return

    m_iterator = list.iterator()

    execute(() -> executeOnce())
      
  // --------------------------------------------------------------------------
  private function executeOnce()
    let ct = getCancellationToken()
    var i = 0

    while (i < m_iterations and m_iterator.hasNext() and not completed() and not ct.isCanceled())
      m_action.call(this, m_iterator.next())
      i++

    if (completed())
      return

    if (ct.isCanceled())
      cancel()
      return

    if (m_iterator.hasNext())
      m_executeOnceCallback = doAfter(m_time) () ->
        m_executeOnceCallback = null /* destroyed automatically */
        executeOnce()
    else
      succeed()

