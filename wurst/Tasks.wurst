public class ExecuteWhileTaskDefinition extends TaskDefinition
  private int m_iterations
  private real m_time
  private Func1<Task, bool> m_action

  // --------------------------------------------------------------------------
  construct(TaskDefinition parent, string label, real time, int iterations, Func1<Task, bool> action)
    super(parent, label)
    m_time = time
    m_iterations = iterations
    m_action = action.acquire()

  // --------------------------------------------------------------------------
  ondestroy
    m_action.release()  

  // --------------------------------------------------------------------------
  override protected function createTask(Task parent, object userData, CancellationToken ct) returns Task
    return new ExecuteWhileTask(this, parent, userData, ct, m_time, m_iterations, m_action)

// ============================================================================
class ExecuteWhileTask extends Task
  private int m_current
  private int m_iterations
  private real m_time
  private Func1<Task, bool> m_action
  private CallbackSingle m_executeOnceCallback

  // --------------------------------------------------------------------------
  construct(TaskDefinition definition, Task parent, object userData, CancellationToken ct, real time, int iterations, Func1<Task, bool> action)
    super(definition, parent, userData, ct)
    m_time = time
    m_iterations = iterations
    m_action = action.acquire()
    m_executeOnceCallback = null

  // --------------------------------------------------------------------------
  ondestroy
    m_action.release()

    if (m_executeOnceCallback != null)
      destroy m_executeOnceCallback
      m_executeOnceCallback = null

  // --------------------------------------------------------------------------
  override protected function run()
    super.run()
    m_current = 0

    execute(() -> executeOnce())
      
  // --------------------------------------------------------------------------
  private function executeOnce()
    let ct = getCancellationToken()
    var i = 0
    var continue = true

    while (i < m_iterations and continue and not completed() and not ct.isCanceled())
      continue = m_action.call(this)
      i++

    if (completed())
      return

    if (ct.isCanceled())
      cancel()
      return

    if (continue)
      m_executeOnceCallback = doAfter(m_time) () ->
        m_executeOnceCallback = null /* destroyed automatically */
        executeOnce()
    else
      succeed()

