package DockPanelLite
import PanelLite
import DockPanelLayout

// ============================================================================
public class DockPanelLite extends PanelLite
  private DockPanelLayout m_layout

  // --------------------------------------------------------------------------
  construct()
    m_layout = new DockPanelLayout()
    setFrameLayout(m_layout)

  // --------------------------------------------------------------------------
  ondestroy
    destroy m_layout
    m_layout = null

  // --------------------------------------------------------------------------
  function getLastChildFills() returns bool
    return m_layout.getLastChildFills()

  // --------------------------------------------------------------------------
  function setLastChildFills(bool value)
    if (m_layout.getLastChildFills() != value)
      m_layout.setLastChildFills(value)
      invalidateLayout()

  